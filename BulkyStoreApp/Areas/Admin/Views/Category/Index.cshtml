@model List<Category>

<partial name="_Notification" />

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="Category" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Add New Category</a>
        </div>
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr class="table-light">
        <th>CateGory Name</th>
        <th>Display Order</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
      @foreach (var obj in Model.OrderBy(c =>c.Name))
      {
            <tr class="table-light">
              <td>@obj.Name</td>
              <td>@obj.DisplayOrder.ToString()</td>
              <td>
                  <div class="w-75 btn-group" role="group">
                      <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil"></i> Edit
                      </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                            <i class="bi bi-trash3-fill"></i> Delete
                        </a>
                  </div>
              </td>
          </tr>
      }
    </tbody>
</table>