@model List<Category>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="Category" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Add New Category</a>
        </div>
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr class="table-light">
        <th>CateGory Name</th>
        <th>Display Order</th>
    </tr>
    </thead>
    <tbody>
      @foreach (var obj in Model.OrderBy(c =>c.Name))
      {
            <tr class="table-light">
              <td>@obj.Name</td>
              <td>@obj.DisplayOrder.ToString()</td>
          </tr>
      }
    </tbody>
</table>